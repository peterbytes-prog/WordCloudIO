<FileChoosePopUp>:
    title:'Select a TextFile'
    file_choser:_file_choser
    AnchorLayout:
        anchor_x:'center'
        anchor_y:'center'
        GridLayout:
            cols: 1
            FileChooserListView:
                path: './'
                id:_file_choser
            AnchorLayout:
                anchor_x:'right'
                anchor_y:'center'
                size_hint_y:None
                height: self.children[0].height
                GridLayout:
                    cols: 2
                    size_hint:None,None
                    size: self.minimum_size
                    Button:
                        text:'cancel'
                        size_hint:None,None
                        size:self.texture_size
                        padding:('20dp','10dp')
                        on_release:root.dismiss()
                    Button:
                        text:'Open'
                        size_hint:None,None
                        size:self.texture_size
                        padding:('20dp','10dp')
                        on_release:root.Open(_file_choser.path,_file_choser.selection)


<WORDCLOUD>:
    test:print('Hello')
    anchor_x: 'center'
    anchor_y:'center'
    from_file_path_input:_from_file_path_input
    GridLayout:
        cols: 1
        padding: ['7dp','10dp']
        spacing:'10dp'
        size_hint_y:None
        height: self.minimum_height
        Label:
            text:'Word Cloud IO'
            font_size:'34dp'
            size_hint:1,None
            size:self.texture_size
        GridLayout:
            cols: 1
            size_hint_y:None
            height: '60dp'
            Label:
                text:'Input File (.txt)'
                size_hint:None,None
                size:self.texture_size
            GridLayout:
                cols: 2
                AnchorLayout:
                    anchor_x: 'center'
                    anchor_y:'center'
                    TextInput:
                        padding:('7dp',int(self.height*0.30))
                        size_hint:(0.9,1)
                        id: _from_file_path_input
                AnchorLayout:
                    anchor_x: 'center'
                    anchor_y:'center'
                    size_hint:(0.3,1)
                    Button:
                        text:'Browse'
                        size_hint:(0.8,1)
                        on_release: root.file_chooser_popup.open()

        GridLayout:
            cols: 1
            size_hint_y:None
            height: '60dp'
            Label:
                text:'Output File Name'
                size_hint:None,None
                size:self.texture_size
            AnchorLayout:
                anchor_x: 'center'
                anchor_y:'center'
                TextInput:
                    padding:('7dp',int(self.height*0.30))
                    text:'Untitled.png'
                    size_hint:(0.9,1)
                    on_text: root.set_to_path(self.text)
        AnchorLayout:
            anchor_x:'center'
            anchor_y:'center'
            size_hint_y:None
            height: '75dp'
            Button:
                text:'Generate'
                size_hint:0.5,0.5
                background_color:(0.2,1,0,1)
                on_release: root.generate()
