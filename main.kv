<WORDCLOUD>:
    test:print('Hello')
    anchor_x: 'center'
    anchor_y:'center'
    GridLayout:
        cols: 1
        padding: ['7dp','10dp']
        spacing:'10dp'
        size_hint_y:None
        height: self.minimum_height
        Label:
            text:'Word Cloud IO'
            font_size:'34dp'
            size_hint:1,None
            size:self.texture_size
        GridLayout:
            cols: 1
            size_hint_y:None
            height: '60dp'
            Label:
                text:'Input File (.txt)'
                size_hint:None,None
                size:self.texture_size
            GridLayout:
                cols: 2
                AnchorLayout:
                    anchor_x: 'center'
                    anchor_y:'center'
                    TextInput:
                        padding:('7dp',int(self.height*0.30))
                        size_hint:(0.9,1)
                AnchorLayout:
                    anchor_x: 'center'
                    anchor_y:'center'
                    size_hint:(0.3,1)
                    Button:
                        text:'Browse'
                        size_hint:(0.8,1)

        GridLayout:
            cols: 1
            size_hint_y:None
            height: '60dp'
            Label:
                text:'Output File Name'
                size_hint:None,None
                size:self.texture_size
            AnchorLayout:
                anchor_x: 'center'
                anchor_y:'center'
                TextInput:
                    padding:('7dp',int(self.height*0.30))
                    size_hint:(0.9,1)
        AnchorLayout:
            anchor_x:'center'
            anchor_y:'center'
            size_hint_y:None
            height: '75dp'
            Button:
                text:'Generate'
                size_hint:0.5,0.5
                background_color:(0.2,1,0,1)
