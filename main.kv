<SelectShape>:
    anchor_x:'center'
    anchor_y:'center'
    StackLayout:
        size_hint:None,None
        size: ('300dp','100dp')
        orientation:'lr-tb'
        ToggleButton:
            text:' '
            size_hint:None,None
            size: ('100dp','100dp')
            group:'cloud_shape'
            background_color:(1,1,1,0.5)
            canvas.before:
                Color:
                    rgba:(0,0,0,1)
                Ellipse:
                    size: int(self.size[0]*0.8),int(self.size[1]*0.8)
                    pos:self.pos[0]+int(self.size[0]*0.1),self.pos[1]+int(self.size[0]*0.1)
        ToggleButton:
            text:' '
            group:'cloud_shape'
            size_hint:None,None
            size: ('100dp','100dp')
            background_color:(1,1,1,0.5)
            canvas.before:
                Color:
                    rgba:(0,0,0,1)
                Rectangle:
                    size: int(self.size[0]*0.8),int(self.size[1]*0.8)
                    pos:self.pos[0]+int(self.size[0]*0.1),self.pos[1]+int(self.size[0]*0.1)
        ToggleButton:
            text:' '
            group:'cloud_shape'
            size_hint:None,None
            size: ('100dp','100dp')
            background_color:(1,1,1,0.5)
            canvas.before:
                Color:
                    rgba:(0,0,0,1)
                Ellipse:
                    segments:3
                    size: int(self.size[0]*0.8),int(self.size[1]*0.8)
                    pos:self.pos[0]+int(self.size[0]*0.1),self.pos[1]+int(self.size[0]*0.1)
<SelectImage>:
    anchor_x:'center'
    anchor_y:'center'
    PillListHeader:
        title:'Select Image File'

<ColorSlider@GridLayout>:
    innerslider:_slider
    text:''
    cols: 3
    Label:
        text:root.text
        size_hint:None,1
        size:self.texture_size
    Slider:
        id: _slider
        min: 0
        max: 255
        step: 1
        value:255
        orientation: 'horizontal'
    Label:
        text:str(int(_slider.value))
        size_hint:None,1
        size:self.texture_size

<PillList>:
    list:_list
    canvas.before:
        Color:
            rgba: (100/255, 100/255, 100/255,1)
        Rectangle:
            size: self.size
            pos: self.pos
        Color:
            rgba:(1,1,1,1)
        Line:
            rectangle: (*self.pos,*self.size)
    StackLayout:
        id:_list
        orientation:'lr-tb'
        spacing:('3dp','3dp')
        padding: ['7dp','10dp']
        size_hint:1,None
        height:self.minimum_height

<PillListHeader>:
    cols: 1
    size_hint_y:None
    height:self.minimum_height
    title: ''
    text_input:_text_input
    Label:
        size_hint_y:None
        height:self.texture_size[1]
        text_size:self.size
        text:root.title
        halign:'left'
        bold:True
        font_size:'20sp'

    AnchorLayout:
        anchor_x:'center'
        anchor_y:'center'
        size_hint_y:None
        height: '50dp'
        GridLayout:
            cols: 2
            size_hint:0.7,0.9
            TextInput:
                hint_text:'Add Character to remove'
                padding:('7dp',int(self.height*0.30))
                size_hint:(0.9,1)
                id:_text_input
            Button:
                text: 'Add'
                size_hint:None,None
                size: self.texture_size
                padding:('10dp','4dp')
                on_release: root.add_item()
<ErrorPopUp>:
    title:'Error'
    title_size:'30sp'
    title_color:(217/255, 83/255, 79/255,1)
    title_align:'center'
    separator_color:(240/255, 173/255, 78/255,1)
    size_hint:0.5,0.5
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            canvas:
                Color:
                    rgba:(247/255,247/255,247/255,1)
                Rectangle:
                    size: self.size
                    pos:self.pos
            Label:
                text:root.text
                color:(217/255, 83/255, 79/255,1)
                text_size:self.width,None
                valign:'center'
                halign:'center'
        AnchorLayout:
            anchor_x:'center'
            anchor_y:'center'
            size_hint_y:None
            height:self.children[0].height
            Button:
                text:'Close'
                size_hint:None,None
                size:self.texture_size
                padding:('15dp','5dp')
                on_press:root.dismiss()

<FileChoosePopUp>:
    title:'Select a TextFile'
    file_choser:_file_choser
    AnchorLayout:
        anchor_x:'center'
        anchor_y:'center'
        GridLayout:
            cols: 1
            FileChooserListView:
                path: './'
                id:_file_choser
            AnchorLayout:
                anchor_x:'right'
                anchor_y:'center'
                size_hint_y:None
                height: self.children[0].height
                GridLayout:
                    cols: 2
                    size_hint:None,None
                    size: self.minimum_size
                    Button:
                        text:'cancel'
                        size_hint:None,None
                        size:self.texture_size
                        padding:('20dp','10dp')
                        on_release:root.dismiss()
                    Button:
                        text:'Open'
                        size_hint:None,None
                        size:self.texture_size
                        padding:('20dp','10dp')
                        on_release:root.Open(_file_choser.path,_file_choser.selection)
<MyLabel>:
    size_hint:None,None
    size:self.texture_size
    padding:('5dp','3dp')
    canvas.before:
        Color:
            rgba: (0.5,0.3,0.3,1) if self.state=='down' else (0.3,0.5,0.3,1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: 3,3
        Color:
            rgba:(1,0.3,0.3,1) if self.state=='down' else (0.3,1,0.3,1)
        Line:
            rounded_rectangle: (*self.pos,*self.size,3)
<WORDCLOUD>:
    anchor_x: 'center'
    anchor_y:'top'
    from_file_path_input:_from_file_path_input
    canvas:
        Color:
            rgba: (141/255, 143/255, 144/255,1)
        Rectangle:
            size: self.size
            pos:self.pos
            source:'assets/app_bg.png'
    GridLayout:
        cols: 1
        padding: ['7dp','10dp']
        spacing:'10dp'
        size_hint_y:None
        height: self.minimum_height
        Label:
            text:'[size=100px][color=#5bc0de]Word[/color] [i][color=#292b2c][b]Cloud[/b][/color][/i][/size] [size=110px]IO[/size]'
            markup: True
            size_hint:1,None
            height:int(root.height*0.3)
        GridLayout:
            cols: 1
            size_hint_y:None
            height: '60dp'
            Label:
                text:'Input File (.txt)'
                size_hint:None,None
                size:self.texture_size
            GridLayout:
                cols: 2
                AnchorLayout:
                    anchor_x: 'center'
                    anchor_y:'center'
                    TextInput:
                        padding:('7dp',int(self.height*0.30))
                        size_hint:(0.9,1)
                        id: _from_file_path_input
                        canvas.after:
                            Color:
                                rgba:root.from_file_path_input_border
                            Line:
                                rectangle: (*self.pos,*self.size)
                AnchorLayout:
                    anchor_x: 'center'
                    anchor_y:'center'
                    size_hint:(0.3,1)
                    Button:
                        text:'Browse'
                        size_hint:(0.8,1)
                        on_release: root.file_chooser_popup.open()
                        background_color:(91/255,192/255,222/255,1)

        GridLayout:
            cols: 1
            size_hint_y:None
            height: '60dp'
            Label:
                text:'Output File Name'
                size_hint:None,None
                size:self.texture_size
            AnchorLayout:
                anchor_x: 'center'
                anchor_y:'center'
                TextInput:
                    padding:('7dp',int(self.height*0.30))
                    text:'Untitled.png'
                    size_hint:(0.9,1)
                    on_text: root.set_to_path(self.text)
        AdvanceSettingButton:
            text:'Advance Settings'
            text_size:self.size
            halign:'right'
            underline:True
            size_hint:1,None
            height:self.texture_size[1]
            on_press:root.goto('settingscreen')
        AnchorLayout:
            anchor_x:'center'
            anchor_y:'center'
            size_hint_y:None
            height: '75dp'
            Button:
                text:'Generate'
                bold:True
                size_hint:0.5,0.5
                background_color:(92/255,184/255,92/255,1)
                on_release: root.generate()
                canvas:
                    Color:
                        rgba:(1,1,1,1)
                    Line:
                        rectangle: (*self.pos,*self.size)
<MySETTINGS>:
    do_default_tab: False
    ex_char_container: _ex_char_container
    ex_word_container:_ex_word_container
    mask_type_container:_mask_type_container
    img_bg_color:(_rslider.innerslider.value/255,_gslider.innerslider.value/255,_bslider.innerslider.value/255,1)
    TabbedPanelItem:
        text: 'Remove'
        AnchorLayout:
            anchor_x:'center'
            anchor_y:'center'
            canvas:
                Color:
                    rgba:(41/255, 43/255, 44/255,1)
                Rectangle:
                    size: self.size
                    pos:self.pos
            GridLayout:
                cols:1
                padding: ['7dp','10dp']
                spacing:'10dp'
                PillListHeader:
                    title:'Removed Characters'
                    textAdder: root.add_new_ex_chars
                PillList:
                    id:_ex_char_container
                PillListHeader:
                    title:'Removed Words'
                    textAdder: root.add_new_ex_word
                PillList:
                    id:_ex_word_container
                AnchorLayout:
                    size_hint_y: None
                    height: '45dp'
                    anchor_x:'center'
                    anchor_y:'center'
                    Button:
                        text: 'Apply Changes'
                        bold:True
                        size_hint:0.5,0.8
                        background_color:(1/255,1/255,1/255,1)
                        on_release: root.goto('mainscreen')
                        canvas:
                            Color:
                                rgba:(1,1,1,1)
                            Line:
                                rectangle: (*self.pos,*self.size)
    TabbedPanelItem:
        text:'Decorations'
        AnchorLayout:
            anchor_x:'center'
            anchor_y:'center'
            GridLayout:
                cols: 1
                GridLayout:
                    cols: 1
                    GridLayout:
                        cols: 1
                        size_hint_y:None
                        height: '60dp'
                        Label:
                            text:'Word Cloud Mask'
                            size_hint:None,None
                            size:self.texture_size
                        AnchorLayout:
                            anchor_x:'center'
                            anchor_y:'center'
                            Spinner:
                                size_hint: 0.9, 0.9
                                id:_drp
                                text: 'Shape'
                                values: 'Shape', 'Image'
                                on_text: root.select_masking(self.text)
                    GridLayout:
                        cols: 1
                        id:_mask_type_container
                        SelectShape:
                        

                GridLayout:
                    cols: 1
                    GridLayout:
                        cols: 1
                        size_hint_y:None
                        height: '60dp'
                        Label:
                            text:'Set Background Color'
                            size_hint:None,None
                            size:self.texture_size
                        GridLayout:
                            cols: 2
                            GridLayout:
                                cols: 1
                                ColorSlider:
                                    text:'R'
                                    id:_rslider
                                ColorSlider:
                                    text:'G'
                                    id:_gslider
                                ColorSlider:
                                    text:'B'
                                    id:_bslider
                            Widget:
                                size_hint:0.7,None
                                height: '120dp'
                                canvas:
                                    Color:
                                        rgba: root.img_bg_color
                                    Rectangle:
                                        size: int(self.size[0]*0.6),int(self.size[1]*0.6)
                                        pos: self.pos[0]+int(self.size[0]*0.2),self.pos[1]+int(self.size[1]*0.2)
<AppPages>:
    main_screen_app:_main_screen_app
    settings_screen_app:_settings_screen_app
    Screen:
        name: 'mainscreen'
        WORDCLOUD:
            app_pager:root
            id:_main_screen_app
    Screen:
        name: 'settingscreen'
        MySETTINGS:
            app_pager:root
            id:_settings_screen_app
