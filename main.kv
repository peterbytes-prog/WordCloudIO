<WORDCLOUD>:
    test:print('Hello')
    anchor_x: 'center'
    anchor_y:'center'
    GridLayout:
        cols: 1
        padding: ['7dp','10dp']
        Label:
            text:'Word Cloud IO'
        GridLayout:
            cols: 1
            Label:
                text:'Input File (.txt)'
            GridLayout:
                cols: 2
                TextInput:
                AnchorLayout:
                    anchor_x: 'center'
                    anchor_y:'center'
                    size_hint:(0.3,1)
                    Button:
                        text:'Browse'
                        size_hint:(0.8,1)

        GridLayout:
            cols: 1
            Label:
                text:'Output File Name'
            AnchorLayout:
                anchor_x: 'center'
                anchor_y:'center'
                TextInput:
                    size_hint:(0.9,1)
        AnchorLayout:
            anchor_x:'center'
            anchor_y:'center'
            Button:
                text:'Generate'
                size_hint:0.5,0.5
